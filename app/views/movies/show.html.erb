<div class="container mb-5">
  <div class="row g-0">
    <div class="card my-5 border-dark shadow-lg mx-auto" style="max-width:850px;">
      <div class="row g-0">
        <div class="col-md-6 bg-dark">
          <img class="img-fluid rounded-top " src="https://image.tmdb.org/t/p/original<%= @movie['poster_path']%>" alt="Poster image">
          <div class="card-footer text-center flush" style="background-color:black;"> 
             <% if user_signed_in? %>
              <% m = current_user.movies.find_by(api_id: movie["id"])%>
              <% if m.present? %>
                <% wlm = current_user.watch_list_movies.find_by(movie_id: m.id)%>
                <%= link_to "- Watchlist", watch_list_movie_path(wlm.id), method: :delete, class: "btn btn-sm btn-outline-danger"%>
              <% else %>
                <%= form_with(model: current_user.watch_list_movies.build) do |f| %>
                  <%= f.hidden_field :api_id, :value => movie["id"] %>
                  <%= f.hidden_field :image_url, :value => movie["poster_path"] %>
                  <%= f.hidden_field :name, :value => movie["title"] %> 
                  <%= f.submit "+ Watchlist", class: "btn btn-outline-primary btn-sm" %>
                <% end %>
              <% end %>
            <% else %>
              <%= link_to "+ Watchlist", watch_list_movies_path, method: :post, class: "btn btn-sm btn-outline-primary"%>
            <% end %>
          </div>
        </div>
        <div class="col-md-6 bg-white rounded">
          <div class="card-header p-1">
            <h2 class="text-center m-0 pt-2 "><%=@movie["title"] %></h2>
            <h6 class="text-center m-0 py-2 "><%=@movie["tagline"] %> </h6>
          </div>
          <div class="card-body rounded-end p-0">
            <ul class="list-group list-group-flush">
              <li class="list-group-item py-1"><strong>Rating:</strong> <%=@movie["vote_average"] %>/10 (<%=@movie["vote_count"] %> votes)</li>
              <li class="list-group-item py-1"><strong>Runtime:</strong> <%=@movie["runtime"]%> minutes</li>
              <li class="list-group-item py-1"><div><strong>Status:</strong> <%=@movie["status"] %></li>
             <li class="list-group-item py-1"><strong>Release date:</strong> <%=@movie["release_date"][5..6]%>-<%=@movie["release_date"][8..9]%>-<%=@movie["release_date"][0..3]%></li>
              <li class="list-group-item rounded-bottom"><strong>Overview:</strong> <%=@movie["overview"] %><br>
                 <% if @movie["homepage"].present? %>
                  <a href='<%=@movie["homepage"] %>'>Website</a>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-0">
    <div class="card mx-auto bg-light border-dark rounded-bottom shadow-lg" style="max-width:850px">
      <div class="card-header p-0 text-center">
        <h3 class="p-3 m-0">Reviews for <%=@movie["title"]%></h3>
      </div>
      <div class="row g-0 ">
        <div class="col-md-6 rounded-bottom m-0">
            <% m = Movie.find_by(api_id: @movie["id"])%>
            <% if m.reviews.present? %>
              <ul class="list-group list-group-flush">
                <% m.reviews.each do |review|%>
                <li class="list-group-item bg-light">
                  <p class="mb-1"><strong><%= review.user.username%></strong> on <%= review.created_at.month%>-<%= review.created_at.day%>-<%= review.created_at.year%>:</p>
                  <span class="pt-0"><%= review.rating%>/10: <%= review.content%></span>
                </li>
                <% end %>
              </ul>
            <% else%>
              <p class="p-3 text-center">No reviews yet</p>
            <% end %>
        </div>
        <div class="col-md-6 bg-white rounded-bottom p-3">
          <h3 class="text-center m-3">Write a Review</h3> 
          <% if user_signed_in? %>
          <% user_id = current_user.id %>
          <% current_user_review = Movie.find_by(api_id: @movie["id"]).reviews.find_by(user_id: user_id) %>
          <% if current_user_review.present?%>
            <p class="text-center">You already wrote a review for this movie!</p>
          <%else%>
          <div class="px-3 pt-0 m-0">
            <%= simple_form_for Review.new do |f| %>
              <%= f.hidden_field :api_id, value: @movie["id"] %>
              <%= f.hidden_field :image_url, value: @movie["poster_path"] %>
              <%= f.hidden_field :name, value: @movie["title"] %> 
              <%= f.input :content %>
              <div class="d-flex justify-content-start align-items-end my-3">
                <%= f.input :rating, collection: 0..10, class:"my-3"%>
                <%= f.button :submit, "Submit", class: "btn btn-dark ms-3"%> 
              </div>
            <% end %>
          </div>
          <%end%>
          <%else%>
          <p class="text-center">Sign in to write a review!</p>
                    <%= link_to "Log in", new_user_session_path, class: "btn btn-outline-light btn-sm" %>

          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
