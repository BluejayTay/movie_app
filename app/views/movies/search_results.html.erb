<div class="container mb-5">
  <h1 class="text-center my-5"> Search Results for "<%=params[:name]%>" </h1>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-3 g-3">
    <% @movies.each do |movie| %>
      <div class="col">
        <div class="card bg-dark shadow-sm h-100" style="min-width:225px">
          <div class="card-body text-center text-white" style="background-color:black; font-weight:400;">
            <div class="align-bottom p-0 text-uppercase">
              <%= movie["title"] %>
            </div>
          </div>
          <% if movie["backdrop_path"].present? %>
            <img class="img-fluid" src="https://image.tmdb.org/t/p/original<%= movie['backdrop_path']%>" alt="Movie image">
          <% else %>
            <%= image_pack_tag "media/images/Sad_cat.jpg", alt: "Sad cat", class:"img-fluid"%>
          <% end %>      
          <div class="card-footer d-flex justify-content-center py-3" style="background-color:#151616;">
            <%= link_to "Movie Info", movie_path(movie["id"]), class: "btn btn-outline-info btn-sm me-3"%>
            <% if user_signed_in? %>
              <% m = current_user.movies.find_by(api_id: movie["id"])%>
              <% if m.present? %>
                <% wlm = current_user.watch_list_movies.find_by(movie_id: m.id)%>
                <%= link_to "- Watchlist", watch_list_movie_path(wlm.id), method: :delete, class: "btn btn-sm btn-outline-danger"%>
              <% else %>
                <%= render "shared/add_to_watchlist", movie: movie %>
              <% end %>
            <% else %>
              <%= link_to "+ Watchlist", watch_list_movies_path, method: :post, class: "btn btn-sm btn-outline-primary"%>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


