<div class="container">

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
  <% @movies.each do |movie| %>
    <div class="col">
      <div class="card bg-light">
        <% if movie['backdrop_path'].present? %>
        <img class="card-img-top" src="https://image.tmdb.org/t/p/original<%= movie['backdrop_path']%>" alt="Movie image">
        <%else %>
        <%= image_pack_tag "media/images/Sad_cat.jpg", alt: "Sad cat"%>
        <%end%>
        <div class="card-body" style="height: 8rem;">
          <h5 class="card-title"><%= movie["title"] %></h4>
        </div>
        <div class="card-footer">
          <div class ="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <a href="<%= movie_path(movie["id"]) %>" class="btn btn-outline-dark btn-sm">See Details</a>
            <a href="#" class="btn btn-outline-dark btn-sm">+ Watchlist</a>
          </div>
          </div>
        </div>
      </div>
    </div> 
  <% end %>
  </div>
</div>

