<div class="container">
  <h1 class="text-center my-5">Your Reviews</h1>
  <% @reviews.each do |review|%>
    <div class="card bg-dark mb-5 mx-auto" style="max-width: 900px;">
      <div class="card-header d-flex justify-content-between align-items-center" style="background-color:black;font-weight:400;"> 
        <div class="text-white m-0 p-0 text-uppercase" >
          <%= review.movie.name %>
        </div>
      </div>
      <div class="row g-0">
        <div class="col-md-5 col-lg-3">
          <img src="https://image.tmdb.org/t/p/original<%= review.movie.image_url %>" class="img-fluid" alt="Poster image">
        </div>
        <div class="col-md-7 col-lg-9 bg-light p-3">
          <h4 class="card-text my-0"><%= review.rating %>/10</h4>
          <p class="card-text mx-4 mt-1 mb-2"><%= review.content%></p> 
          <p class="card-text text-muted ms-4">Posted on: <%= review.created_at.month%>-<%= review.created_at.day%>-<%= review.created_at.year%></p>
        </div>
      </div>
      <div class="card-footer bg-dark d-flex justify-content-between align-items-center py-2" style="background-color:black">
        <div>
          <%= link_to "Movie Info", movie_path(review.movie.api_id), class: "btn btn-outline-info btn-sm"%>
        </div>
        <div class="btn-group">
          <%= link_to "Edit", edit_review_path(review.id), class: "btn btn-light btn-sm px-3"%>
          <%= link_to "Delete", review_path(review.id),
                            method: :delete,
                            data: {confirm: "Are you sure you want to delete this review?"}, 
                            class: "btn btn-danger btn-sm px-3"%>
        </div>
      </div>
    </div>
  <% end %>
</div>